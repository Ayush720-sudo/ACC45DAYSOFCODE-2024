#include <bits/stdc++.h>
using namespace std;

int main() {
    int T;  // Number of test cases
    cin >> T;
    
    while (T--) {
        int N, X;
        cin >> N >> X;
        
        // Calculate the number of subscriptions required
        int num_subscriptions = ceil((double)N / 6);
        
        // Calculate the total cost
        int total_cost = num_subscriptions * X;
        
        // Output the result
        cout << total_cost << endl;
    }
    
    return 0;
}
